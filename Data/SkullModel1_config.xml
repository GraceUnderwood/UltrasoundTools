  <ScanConversion
    TransducerName="Ultrasonix_L9-4/38"
    TransducerGeometry="LINEAR"
    ImagingDepthMm="37.8"
    TransducerWidthMm="33.28"
    OutputImageSizePixel="512 512"
    TransducerCenterPixel="256 0"
    OutputImageSpacingMmPerPixel="0.061 0.061"
    NumberOfScanLines="90"
    NumberOfSamplesPerScanLine="210" />
</PlusConfiguration>
